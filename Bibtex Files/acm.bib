author = {Shetty, Dasharathraj K and Prerepa, Gayathri and Naik, Nithesh and Bhat, Ritesh and Sharma, Jayant and Mehrotra, Parva},
title = {Revolutionizing Aerospace and Defense: The Impact of AI and Robotics on Modern Warfare},
year = {2023},
