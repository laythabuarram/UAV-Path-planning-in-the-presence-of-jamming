@article{10.1145/3715334,
author = {Siraj, Md Sadman and Charatsaris, Panagiotis and Diamanti, Maria and Tsiropoulou, Eirini Eleni and Papavassiliou, Symeon},
title = {HEROES: Humanitarian Emergency Response based on UAV-enabled Integrated Sensing and Communication, Positioning, and Satisfaction Games},
