@article{ WOS:001575980700001,
Author = {Rahmani, Mohammed and Senouci, Sidi Mohammed and Delavernhe, Florian and
   Berbineau, Marion},
Title = {Q-Learning-Based Multi-Objective Path Planning for AAV Parcel Delivery
