@article{ WOS:001312963400133,
Author = {Ding, Rui and Zhou, Fuhui and Wu, Qihui and Ng, Derrick Wing Kwan},
Title = {From External Interaction to Internal Inference: An Intelligent Learning
   Framework for Spectrum Sharing and UAV Trajectory Optimization},
Journal = {IEEE TRANSACTIONS ON WIRELESS COMMUNICATIONS},
