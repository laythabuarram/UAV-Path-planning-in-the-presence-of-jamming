@article{ WOS:001542704800001,
Author = {He, Qingying and Liu, Wei and Liu, Tian-Liang and Tian, Qiong},
Title = {Robust coordinated path planning for unmanned aerial vehicles and
   unmanned surface vehicles in maritime monitoring with travel time
