@article{ WOS:001613193100027,
Author = {Dulowicz, J. and Skokowski, P. and Kelner, J. M.},
Title = {Survey on Intentional Interference Techniques of GNSS Signals and Radio
   Links between Unmanned Aerial Vehicle and Ground Control Station},
Journal = {TRANSNAV-INTERNATIONAL JOURNAL ON MARINE NAVIGATION AND SAFETY OF SEA
   TRANSPORTATION},
Year = {2025},
Volume = {19},
Number = {3},
Pages = {931-939},
Month = {SEP},
Abstract = {With the rapid development of unmanned aerial vehicle (UAV) technology,
   UAVs are gaining increasing importance in civilian, industrial, and
   military applications. UAVs are used for environmental monitoring,
   medical deliveries, emergency response, and reconnaissance missions.
   However, their widespread use also introduces new security challenges,
