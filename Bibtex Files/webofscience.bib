@article{ WOS:001619594500005,
Author = {Di, Yupeng and Jiang, Changhui and Su, Zikang and Chen, Shoubin and
   Chen, Yuwei},
Title = {An Adaptive GNSS/Visual Integrated Navigation System for Low-altitude
   UAV under Signal Challenging Environments},
Journal = {JOURNAL OF AERONAUTICS ASTRONAUTICS AND AVIATION},
Year = {2025},
Volume = {57},
Number = {8},
Pages = {1707-1722},
Month = {AUG},
Abstract = {Reliable and continuous position is critical for a Low-altitude Unmanned
   Aerial Vehicle (UAV), the Global Navigation Satellite System (GNSS) can
   generate navigation solutions. However, navigation solutions from the
   GNSS are not always reliable due to the possible signal jamming,
   interference and blockage. In view of the drawbacks, in this paper, we
   proposed a GNSS/Visual integrated navigation system for low-altitude UAV
   under signal challenging environments. The visual positing system (VPS)
   is composed of a front-end visual odometry and back-end aerial-satellite
   images matching based absolute position module. In the front-end task,
   the consecutive top-view aerial images from UAV cameras are matched
   frameby-frame to realize the relative motion estimation; in the back-end
   task, satellite remote sensing images after fine calibration are matched
   with the top-view UAV aerial images to estimate the absolute position.
   Deep learning methods XFeat and SuperGlue are utilized in the front-end
   and back-end individually. Front-end and back-end modules in the VPS
   work cooperatively to generate position, which is then integrated with
   the GNSS using Adaptive Factor Graph Optimization (AFGO) to realize more
   reliable position information. The performance of the proposed method
   was evaluated through four long-distance flight tests, with an average
   position error of approximately 10.14 meters. When a GNSS outage was
   introduced along the flight path, the system can still output
   positioning result with the VPS. The experimental results demonstrate
   the effectiveness of the proposed method.},
DOI = {10.6125/JoAAA.202510\_57(8).05},
