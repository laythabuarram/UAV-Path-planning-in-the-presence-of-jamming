@article{ WOS:000589218700003,
Author = {Hosseinalipour, Seyyedali and Rahmati, Ali and Dai, Huaiyu},
Title = {Interference Avoidance Position Planning in Dual-Hop and Multi-Hop UAV
   Relay Networks},
