Author = {Comba, Lorenzo and Zaman, Shahzad and Biglia, Alessandro and Aimonino,
   Davide Ricauda and Dabbene, Fabrizio and Gay, Paolo},
Title = {Semantic interpretation and complexity reduction of 3D point clouds of
   vineyards},
