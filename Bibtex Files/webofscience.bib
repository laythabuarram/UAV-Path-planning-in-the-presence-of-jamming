@article{ WOS:001574067200003,
Author = {He, Lingfeng and Liu, Xiongzhang and Yang, Yuzhou and Luo, Liwei and
   Huang, Huanwen},
Title = {Integrated path planning and jamming resource allocation for UAV swarm:
   A unified real-coded model optimized by adaptive PSO-DE with Grey-TOPSIS
   threat assessment},
Journal = {ADVANCED ENGINEERING INFORMATICS},
Year = {2026},
Volume = {69},
Number = {A},
Month = {JAN},
Abstract = {The primary challenge in unmanned aerial vehicle (UAV) swarm operations
   against radars lies in the effective assessment of radar threat and the
   joint optimization of path planning and jamming resource allocation. To
   address this, a unified model is proposed, integrating radar threat
   assessment using the Grey-TOPSIS method with a one-dimensional
   real-coded scheme that combines continuous path parameters and discrete
   jamming variables. This encoding enables efficient co-optimization
   through an improved particle swarm optimization algorithm (PSO), which
   integrates the perturbation mechanism of differential evolution (DE) and
   adaptive parameters adjustment mechanism. Inspired by the ``runway-based
   suppression strategy{''}, simulation results demonstrate that the
   proposed model achieves a 96.70 \% survival rate for the fighter
   aircraft, successfully constructing a secure corridor under dynamic
   battlefield conditions. Furthermore, comparative experiment validates
   that the improved PSO outperforms other algorithms by achieving a
   balance among stability, time efficiency, and high convergence speed.},
DOI = {10.1016/j.aei.2025.103867},
EarlyAccessDate = {SEP 2025},
Article-Number = {103867},
ISSN = {1474-0346},
