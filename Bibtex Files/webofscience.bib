@article{ WOS:000932807000001,
Author = {Wang, Jia and Xiao, Yang and Chen, C. L. Philip and Li, Tieshan},
Title = {A Jamming Aware Artificial Potential Field Method to Counter GPS Jamming
   for Unmanned Surface Ship Path Planning},
