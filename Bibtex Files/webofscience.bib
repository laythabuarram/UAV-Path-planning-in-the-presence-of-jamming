@article{ WOS:001504170000001,
Author = {Meng, Chen and Hu, Qinglei and Ge, Shuzhi Sam and Li, Dongyu},
Title = {Trusted Multisource Fusion Navigation for UAV Under GNSS Interference
   and Spoofing Attacks},
