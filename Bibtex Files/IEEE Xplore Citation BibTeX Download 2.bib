  author={Aru Saputro, Jabang and Egistian Hartadi, Esa and Syahral, Mohamad},
  booktitle={2020 1st International Conference on Information Technology, Advanced Mechanical and Electrical Engineering (ICITAMEE)}, 
  title={Implementation of GPS Attacks on DJI Phantom 3 Standard Drone as a Security Vulnerability Test}, 
  year={2020},
